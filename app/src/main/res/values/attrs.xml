<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--星级控件 RatingBar-->
    <declare-styleable name="RatingBar">
        <attr name="starSize" format="dimension|reference" />
        <attr name="starCount" format="integer" />
        <attr name="starSpace" format="dimension|reference" />
        <attr name="starMaxProgress" format="float" />
        <attr name="starProgress" format="float" />
        <attr name="starStrokeWidth" format="dimension|reference" />
        <attr name="starShowStroke" format="boolean" />
        <attr name="starStrokeColor" format="color|reference" />
        <attr name="starFillColor" format="color|reference" />
        <attr name="starCoverColor" format="color|reference" />
        <attr name="starCanTouch" format="boolean" />
        <attr name="starUseGradient" format="boolean" />
        <attr name="starStartColor" format="color|reference" />
        <attr name="starEndColor" format="color|reference" />
        <attr name="starPathData" format="string|reference" />
        <attr name="starPathDataId" format="reference" />
        <attr name="starCoverDir">
            <enum name="left_to_right" value="0" />
            <enum name="right_to_left" value="1" />
            <enum name="top_to_bottom" value="2" />
            <enum name="bottom_to_top" value="3" />
        </attr>
    </declare-styleable>

    <!--自动滚动视图-->
    <declare-styleable name="ScrollPlayView">
        <attr name="speed" format="integer" />
        <attr name="resource" format="reference" />
        <attr name="direction" format="integer" />
    </declare-styleable>

    <!--自定义赛车-->
    <declare-styleable name="CarView">
        <attr name="car_resource" format="reference" />
    </declare-styleable>

    <!--自定义标题栏-->
    <declare-styleable name="TitleBar">
        <attr name="titleBarTitle" format="string" />
        <attr name="titleBarLeftImage" format="reference" />
        <attr name="titleBarLeftTxt" format="string" />
        <attr name="titleBarRightTxt" format="string" />
        <attr name="titleBarRightImage" format="reference" />
        <attr name="titleBarBackground" format="color" />
    </declare-styleable>

    <!--shimmer加载效果-->
    <declare-styleable name="ShimmerLayout">
        <attr name="shimmer_color" format="color|reference" />
        <attr name="shimmer_animation_duration" format="integer|reference" />
        <attr name="shimmer_auto_start" format="boolean|reference" />
        <attr name="shimmer_angle" format="integer|reference" />
        <attr name="shimmer_mask_width" format="float|reference" />
        <attr name="shimmer_gradient_center_color_width" format="float|reference" />
        <attr name="shimmer_reverse_animation" format="boolean|reference" />
    </declare-styleable>

    <!--圆形头像-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <!--列表点击-->
    <declare-styleable name="TabItemLayout">
        <attr name="tab_image" format="reference" />
        <attr name="tab_text" format="string" />
    </declare-styleable>

    <!--波浪侧边栏-->
    <declare-styleable name="WaveSideBarView">
        <attr name="sidebarTextColor" format="color|reference" />
        <attr name="sidebarBackgroundColor" format="color|reference" />
        <attr name="sidebarChooseTextColor" format="color|reference" />
        <attr name="sidebarTextSize" format="dimension" />
        <attr name="sidebarLargeTextSize" format="dimension" />
        <attr name="sidebarRadius" format="dimension" />
        <attr name="sidebarBallRadius" format="dimension" />
    </declare-styleable>

</resources>