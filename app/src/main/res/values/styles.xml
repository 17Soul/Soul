    </style>

    <!--自定义ToolBar返回按钮颜色为白色-->
    <style name="toolbar_theme" parent="Base.Widget.AppCompat.Light.ActionBar">
        <item name="colorControlNormal">#FFF</item>
        <item name="android:actionBarSize">45dp</item>
    </style>

    <style name="button_style" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--底部出现动画-->
    <style name="bottom_exist_anim_style">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <!--顶部出现动画-->
    <style name="top_exist_anim_style">
        <item name="android:windowEnterAnimation">@anim/top_in</item>
        <item name="android:windowExitAnimation">@anim/top_out</item>
    </style>

    <!--popupWindow出现动画-->
    <style name="pop_add">
        <item name="android:windowEnterAnimation">@anim/pop_show</item>
        <item name="android:windowExitAnimation">@anim/pop_hide</item>
    </style>

    <style name="HintDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/hint_dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/hint_dialog_exit_anim</item>
    </style>

</resources>
